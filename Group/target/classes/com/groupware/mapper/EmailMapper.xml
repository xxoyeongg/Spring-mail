<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"HTTP://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.groupware.mapper.EmailMapper">

<select id="getList" resultType="com.groupware.dto.EmailDTO">
<![CDATA[ select * from Email order by registerDate ]]>
</select>

<!-- 메일 전송 -->
<insert id="insert"> insert into Email (mailnum,sendername,sendermail,receivemail,title,content,registerDate,readck) 
values (eml.nextval,#{sendername},#{sendermail},#{receivemail},#{title},#{content},sysdate,0) 
</insert>

<!-- 받는 메일함 -->
<select id="receiveList" resultType="com.groupware.dto.EmailDTO">

select *
from Email
where receivemail =#{receivemail}
order by registerDate

</select>

<!-- 보낸메일함 -->
<select id="sendList" resultType="com.groupware.dto.EmailDTO">

select *
from Email
where sendermail =#{sendermail}
order by registerDate

</select>
<!-- 상세 페이지 -->
<select id="detail" resultType="com.groupware.dto.EmailDTO">

select *
from Email
where mailnum =#{mailnum}

</select>

<!-- 답장 -->

<insert id="reply">
insert into Email (mailnum,sendername,sendermail,receivemail,title,content,registerDate,readck) 
values (eml.nextval,#{sendername},#{sendermail},#{receivemail},#{title},#{content},sysdate,0) 
</insert>

<!-- 수신확인 시 업데이트 -->
<update id="readupdate" >
update Email
set readck =1 
where mailnum=#{mailnum}
</update>

<!-- 안 읽은 메일 함 -->
<select id="unreadlist" resultType="com.groupware.dto.EmailDTO" >

select *
from Email
where readck=0 and receivemail =#{receivemail}
order by registerDate

</select>


<!-- 안 읽은 메일 수 -->
<select id="count" resultType="int">
select count(*)
from Email
where readck=0 and receivemail =#{receivemail}

</select>

<!--메일 삭제 -->



</mapper>