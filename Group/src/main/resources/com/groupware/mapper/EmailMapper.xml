<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"HTTP://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.groupware.mapper.EmailMapper">

<select id="getList" resultType="com.groupware.dto.EmailDTO">
<![CDATA[ select * from Email order by registerDate desc ]]>
</select>

<!-- 메일 전송 -->
<insert id="insert"> insert into Email (senderName,senderMail,receiveMail,title,content,registerDate) 
values (#{senderName},#{senderMail},#{receiveMail},#{title},#{content},to_date(sysdate,'YYYY-MM-DD HH:MI:SS')) 
</insert>

<!-- 받는 메일함 -->
<select id="receiveList" resultType="com.groupware.dto.EmailDTO">

select *
from Email
where receiveMail =#{receiveMail}

</select>

<!-- 보낸메일함 -->
<select id="sendList" resultType="com.groupware.dto.EmailDTO">

select *
from Email
where senderMail =#{senderMail}

</select>
<!-- 상세 페이지 -->
<select id="detail" resultType="com.groupware.dto.EmailDTO">

select *
from Email
where title =#{title}

</select>

<!-- 답장 -->

<insert id="reply">
insert into Email (senderName,senderMail,receiveMail,title,content,registerDate) 
values (#{senderName},#{senderMail},#{receiveMail},#{title},#{content},to_date(sysdate,'YYYY-MM-DD HH:MI:SS')) 
</insert>



</mapper>